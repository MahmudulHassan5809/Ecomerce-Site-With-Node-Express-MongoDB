<% layout('layout') %>

<div class="container">
	<div class="row mt-3">
		<div class="col-md-4">

			<img src="<%= product.image %>" class="img-thumbnail">
		</div>

		<div class="col-md-4">

		</div>

		<div class="col-md-4">
			<h3><%= product.name %></h3>
			<h1><%= product.price %></h1>
			<form action="" method="POST">
				<div class="btn-group" role="group" aria-label="....">
					<input type="hidden" name="quantity" id="quantity" value="1">
					<button type="button" id="minus" class="btn btn-secondary">-</button>
					<button type="button" id="total" class="btn btn-secondary">1</button>
					<button type="button" id="plus" class="btn btn-secondary">+</button>
				</div>
				<br><br>
				<div class="form-group">
					<input type="hidden" name="product_id" id="quantity" value="<%= product._id %>">
					<input type="hidden" name="priceHidden" id="priceHidden" value="<%= product.price %>">

					<input type="text" name="item" class="form-control" value="<%= product.name %>">
					<input type="text" name="priceValue" id="priceValue" class="form-control" value="<%= product.price %>">
				</div>
				<% if (user) { -%>
					<button type="submit" class="btn btn-primary btn-lg">Add To Cart</button>
				<% } else { -%>
						<a href="/users/signup" class="btn btn-warning btn-lg">Signup To Begin Buying!</a>
				<% } -%>
			</form>
		</div>
	</div>
</div>
