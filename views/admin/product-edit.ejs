<% layout('layout') %>

<div class="container">
	<div class="row">
	<div class="col-md-6 mx-auto">
		<% if (message.length > 0 || error_message.length > 0) { -%>
			<div class="alert alert-success alert-dismissable" role="alert">
			   <button type="button" class="close" data-dismiss='alert' aria-label="Close">
			   		<span aria-hidden="true">&times;</span>
			   </button>
			   <%= message %>
			</div>
		<% } else { -%>

		<% } -%>
		<form action="/admin/edit-product/<%= product._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
			<input type="hidden" name="_method" value="PUT">
			<h2>Edit Product</h2>

			<fieldset class="form-group">
					<label>Name</label>
					<input type="text" value="<%= product.name %>" name="name" class="form-control" placeholder="Name">
			</fieldset>

			<fieldset class="form-group">
					<label>Price</label>
					<input type="text" value="<%= product.price %>" name="price" class="form-control" placeholder="Price">
			</fieldset>

			<fieldset class="form-group">
					<label>Select Option</label>
					<select class="form-control" name="category">
						<% for (var i = 0; i < categories.length; i++) { -%>
							<option value="<%= categories[i]._id %>"
								<% if (product.category == categories[i]._id) { -%>
									selected
								<% } -%>
							><%= categories[i].name %> </option>
						<% } -%>
					</select>
			</fieldset>

			<fieldset class="form-group">
					<img src="<%= product.image %>" width="100px" alt="">
					<br>
					<label>Image</label>
					<input type="file" name="image" class="form-control">
			</fieldset>


			<fieldset class="form-group">
					<button type="submit" class="btn btn-block btn-info">Edit Product</button>
			</fieldset>

		</form>
	</div>
</div>
</div>
