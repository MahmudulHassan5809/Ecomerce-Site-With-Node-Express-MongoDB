<% layout('layout') %>

<div class="container">
	<div class="row">
	<div class="col-md-6 mx-auto">
		<% if (message.length > 0) { -%>
			<div class="alert alert-success alert-dismissable" role="alert">
			   <button type="button" class="close" data-dismiss='alert' aria-label="Close">
			   		<span aria-hidden="true">&times;</span>
			   </button>
			   <%= message %>
			</div>
		<% } else { -%>

		<% } -%>
		<form action="/users/edit-profile" method="POST">
			<h2>Edit Profile</h2>

			<fieldset class="form-group">
					<label>Name</label>
					<input type="text" value="<%= user.profile.name %>" name="name" class="form-control" placeholder="Name">
			</fieldset>

			<fieldset class="form-group">
					<label>Address</label>
					<input type="text" value="<%= user.address %>" name="address" class="form-control" placeholder="Address">
			</fieldset>

			<fieldset class="form-group">
					<button type="submit" class="btn btn-block btn-dark">Update</button>
			</fieldset>

		</form>
	</div>
</div>
</div>
